{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2016",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./lib",
    "declaration": true,
    "strictNullChecks": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}

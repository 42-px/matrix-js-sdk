{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noEmit": true,
    "strict": true,
    "declaration": true
  },
  "include": [
    "./src/**/*.ts",
    "./spec/**/*.ts"
  ]
}
